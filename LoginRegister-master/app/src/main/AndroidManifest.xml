<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tonikamitv.loginregister">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SET_DEBUG_APP"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id"/>

        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


        <activity
            android:name=".ProfilePic"
            android:label="@string/app_name" />

        <activity
            android:name=".My_Profile"
            android:label="@string/app_name" />

        <activity
            android:name=".TutorialNext"
            android:label="@string/app_name" />
        <activity
            android:name=".TutorialFinish"
            android:label="@string/app_name" />


        <activity
            android:name=".Login"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".Register"
            android:label="@string/title_activity_register" />
        <activity
            android:name=".MainScreen"
            android:label="@string/title_activity_screen" />
        <activity
            android:name=".WantLanguage"
            android:label="@string/want_language" />
        <activity
            android:name=".InterestActivity"
            android:label="@string/Interest_activity" />
        <activity
            android:name=".HomePage"
            android:label="@string/Home_page" />
        <activity
            android:name=".Tutorial"
            android:label="@string/app_name" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:label="@string/app_name" />

        <activity android:name=".CreateEvent"
            android:label="Create Event"/>

        <activity android:name=".DetailedEventPage"
            android:label="Detailed Event View"/>

    </application>

</manifest>
