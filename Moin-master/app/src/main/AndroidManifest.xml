            android:name=".Tutorial"
            android:label="@string/app_name" />
        <activity
            android:name=".LangLearningList"
            android:label="@string/app_name" />
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name=".CreateEvent"
            android:label="Create Event" />
        <activity
            android:name=".DetailedEventPage"
            android:label="Detailed Event View" />
        <activity
            android:name=".Events"
            android:label="@string/title_activity_events" />

        <activity android:name=".pushnotification.ClickShowPushNotification"
            android:label="More on Notification"
            android:parentActivityName=".CreateEvent">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CreateEvent"/>
        </activity>
        <activity
            android:name=".Missions"
            android:label="@string/title_activity_missions"
            android:parentActivityName="com.tonikamitv.loginregister.My_Profile"/>
        <receiver android:name=".pushnotification.AlertReceiver"></receiver>
    </application>

</manifest>
